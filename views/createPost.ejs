<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Create Post</title>
    <style>
        body {
            background: linear-gradient(90deg, #FC466B, #3F5EFB);
        }

        body {
            background: linear-gradient(45deg, #FC466B, #3F5EFB);
            height: 100vh;
            /* color: #fff; */
        }

        textarea{
            overflow: hidden;
        }

        .main {
            background-color: rgba(255, 255, 255, 0.3);
            border-left: 1px solid rgba(255, 255, 255, 0.3);
            border-top: 1px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
            width: 900px;
            margin-top: 6vh;
            padding: 3vh 10vh;
            border-radius: 3vh;
            box-shadow: 20px 20px 40px -6px rgba(0, 0, 0, 0.2);
            transition: all 0.2s ease-in-out;
            z-index: 2;
        }

        .bg {
            background: transparent;
            background-color: rgba(255, 255, 255, 0.3);
            /* color: #fff; */
        }

        .bg:focus {
            background: transparent;
            background-color: rgba(255, 255, 255, 0.3);
            box-shadow: 4px 4px 60px rgba(0, 0, 0, 0.2);
            /* color: #fff; */
        }

        .btn:hover {
            /* color: #fff; */
            box-shadow: 4px 4px 60px rgba(0, 0, 0, 0.2);
        }

        .form-control[type="file"]::file-selector-button {
            z-index: 1;
            font-size: 1em;
            color: #fff;
            background-color : #212529; 
            padding: .5rem 1rem;
            pointer-events: none;
            border-radius: 0 4px 4px 0;
        }
        .form-control[type="file"]:hover::file-selector-button {
            background-color : #212529 !important; 
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-header">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link " aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/createPost">Create Posts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/myPosts">My Posts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/profile">My Profile</a>
                    </li>
                    <!-- <li class="nav-item">
                <a class="nav-link" href="#">Assign Role</a>
              </li> -->
                </ul>
                <a href="/logout"><button class="btn" type="submit"
                        style="background-color: #FC466B; color: #fff;">Logout</button></a>
            </div>
        </div>
    </nav>



    <div class="container main">
        <div class="container display-3 fw-bolder text-center ">Create Post</div>
        <% if(error != null) { %>
        <div class="fs-5 text-center mb-2">Error : <%= error %></div>
        <% } %>
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label fw-bolder fs-4">Title</label>
                <input type="text" name="title" class="form-control bg" id="title" autocomplete>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label fw-bolder fs-4">Upload Profile Picture</label>
                <input name="image" class="form-control bg" type="file" id="image">
            </div>
            <div class="">
                <label for="content" class="form-label fw-bolder fs-4">Content</label>
                <textarea name="content" class="form-control bg" id="content" rows="6"></textarea>
            </div>
            <!-- <div style="align-items: center;">
                <button type="button" class="btn btn-primary">Primary</button>
            </div> -->
            <div class="d-grid gap-2 mt-4 mb-2 ">
                <button class="form-control btn btn-dark fs-4" type="submit">Save</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>